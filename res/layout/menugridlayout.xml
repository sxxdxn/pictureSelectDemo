<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content" android:weightSum="1">
  
  		<ImageView 
  		android:id="@+id/menu_grid_pic"
  		android:scaleType="fitXY"
  		android:src="@drawable/cai_1"
  		 android:layout_width="119dp" android:layout_weight="0.12" android:layout_height="match_parent"/>
  		
  		<LinearLayout 
    	android:layout_height="wrap_content"
    	android:orientation="vertical" android:layout_width="119dp">
    		<RelativeLayout 
   				android:layout_width="match_parent"
   				android:layout_height="match_parent"
   				android:layout_weight="1" >
	    		<TextView 
	    		android:id="@+id/menu_grid_name"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textSize="18sp"
	    		android:text="香辣里脊"/>
	    	</RelativeLayout>
	    	<RelativeLayout 
   				android:layout_width="match_parent"
   				android:layout_height="match_parent"
   				android:layout_weight="1">
	    		<TextView 
	    		android:id="@+id/menu_grid_price"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textSize="18sp"
	    		android:text="18元"/>
	    	</RelativeLayout>
	    	<RelativeLayout 
   				android:layout_width="match_parent"
   				android:layout_height="match_parent"
   				android:layout_weight="1" android:gravity="top">
	    		<RatingBar 
	    		android:id="@+id/menu_grid_star"
	    		style = "?android:attr/ratingBarStyleSmall"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:numStars="5"
	    		android:max="5"
	    		android:stepSize="0.5"/>
	    	</RelativeLayout>
	    	<RelativeLayout 
   				android:layout_width="match_parent"
   				android:layout_height="match_parent"
   				android:layout_weight="1" android:gravity="top">
	    		<CheckBox 
	    		android:id="@+id/menu_grid_check"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:focusable="false"
				android:clickable="false" 
				android:focusableInTouchMode="false"
	    		android:text="尝尝"/>
	    	</RelativeLayout>
    	</LinearLayout>
</LinearLayout>
